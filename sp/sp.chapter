class MoveBot(Node):
    def __init__(self):
        super().__init__('move_bot_node')
        self.publisher_ = self.create_publisher(Twist, 'cmd_vel', 10)
        # ... implementation details ...

def main(args=None):
    rclpy.init(args=args)
    move_bot = MoveBot()
    # ... logic to run the node ...
    move_bot.destroy_node()
    rclpy.shutdown()

if __name__ == '__main__':
